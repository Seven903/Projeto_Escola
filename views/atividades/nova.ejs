<div class="container mt-4">
    <h1><%= title %></h1>
    <hr>
    <%- include('../partials/messages') %>

    <div class="card">
        <div class="card-header bg-success text-white">
            Detalhes da Nova Atividade
        </div>
        <div class="card-body">
            <form action="/atividades" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="titulo" class="form-label">Título:</label>
                    <input type="text" class="form-control" id="titulo" name="titulo" required>
                </div>
                <div class="mb-3">
                    <label for="descricao" class="form-label">Descrição:</label>
                    <textarea class="form-control" id="descricao" name="descricao" rows="4" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="dataEntrega" class="form-label">Data de Entrega:</label>
                    <input type="date" class="form-control" id="dataEntrega" name="data" required>
                </div>
                <div class="mb-3">
                    <label for="horaEntrega" class="form-label">Hora de Entrega (Opcional):</label>
                    <input type="time" class="form-control" id="horaEntrega" name="hora">
                </div>
                <div class="mb-3">
                    <label for="turma" class="form-label">Turma:</label>
                    <select class="form-select" id="turma" name="id_turma" required>
                        <option value="">Selecione uma turma</option>
                        <% turmas.forEach(turma => { %>
                            <option value="<%= turma.id_turma %>" <%= typeof turmaId !== 'undefined' && turmaId == turma.id_turma ? 'selected' : '' %>>
                                <%= turma.nome %> (<%= turma.codigo %>)
                            </option>
                        <% }); %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="arquivo" class="form-label">Anexar Arquivo (Opcional):</label>
                    <input type="file" class="form-control" id="arquivo" name="arquivo">
                </div>
                <button type="submit" class="btn btn-primary">Criar Atividade</button>
                <a href="/atividades" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
